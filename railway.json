{
  "build": {
    "builder": "dockerfile",
    "dockerfilePath": "Dockerfile"
  },

  "deploy": {
    "startCommand": "sh -c \"cd /app && gunicorn camaleao.wsgi:application --bind 0.0.0.0:${PORT}\"",
    "healthcheckPath": "/health/",
    "healthcheckInterval": 10,
    "healthcheckTimeout": 5,
    "healthcheckRetries": 3
  }
}
